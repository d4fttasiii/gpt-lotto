  "dependencies": {
    "web3": "^1.9.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "prettier": "^2.3.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
